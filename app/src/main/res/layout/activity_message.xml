<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#222222"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat with Entities"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <!-- Entity Selection (Multi-select) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select recipients:"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <!-- Entity chips populated dynamically by EntityChipHelper -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupEntities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="false"
        android:layout_marginBottom="16dp"/>


    <!-- Message Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="#FF7F50"
        app:hintTextColor="#FF7F50"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your message..."
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:imeOptions="actionSend"
            android:inputType="textShortMessage"
            android:minLines="2"
            android:maxLines="4"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            app:backgroundTint="#555555"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.TonalButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="#FFFFFF"
            app:backgroundTint="#FF7F50"
            app:icon="@android:drawable/ic_menu_send"
            app:iconTint="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>
