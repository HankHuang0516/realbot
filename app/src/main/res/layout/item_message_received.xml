<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp">

    <!-- Entity Avatar -->
    <TextView
        android:id="@+id/tvAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bubble_received"
        android:gravity="center"
        android:text="ðŸ¦ž"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:orientation="vertical">

        <!-- Entity Name -->
        <TextView
            android:id="@+id/tvEntityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="#666666"
            android:textSize="11sp"
            tools:text="Entity 0 (LOBSTER)" />

        <!-- Message Bubble -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_received"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="15sp"
                tools:text="This is a received message from the entity!" />

            <!-- Photo preview (hidden for text messages) -->
            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:visibility="gone" />

            <!-- Voice player (hidden for text messages) -->
            <LinearLayout
                android:id="@+id/layoutVoice"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="gone">

                <ImageButton
                    android:id="@+id/btnPlay"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Play"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="#333333" />

                <ProgressBar
                    android:id="@+id/progressVoice"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    tools:text="0:15" />
            </LinearLayout>

            <!-- Read receipt: "Entity X å·²è®€" -->
            <TextView
                android:id="@+id/tvReadReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="#4CAF50"
                android:textSize="10sp"
                android:visibility="gone"
                tools:text="Entity 0 å·²è®€"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="#999999"
                android:textSize="10sp"
                tools:text="14:31" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
