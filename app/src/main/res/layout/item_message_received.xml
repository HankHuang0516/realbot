<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp">

    <!-- Entity Avatar -->
    <TextView
        android:id="@+id/tvAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bubble_received"
        android:gravity="center"
        android:text="ðŸ¦ž"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:orientation="vertical">

        <!-- Entity Name -->
        <TextView
            android:id="@+id/tvEntityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="#666666"
            android:textSize="11sp"
            tools:text="Entity 0 (LOBSTER)" />

        <!-- Message Bubble -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_received"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="15sp"
                tools:text="This is a received message from the entity!" />

            <!-- å·²è®€ç‹€æ…‹ (ä¾‹å¦‚: Entity 0 å·²è®€) -->
            <TextView
                android:id="@+id/tvReadStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="#4CAF50"
                android:textSize="10sp"
                android:visibility="gone"
                tools:text="Entity 0 å·²è®€"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="#999999"
                android:textSize="10sp"
                tools:text="14:31" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
