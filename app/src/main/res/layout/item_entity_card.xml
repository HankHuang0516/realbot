<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Character Icon + Entity ID + State Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Character Icon -->
            <TextView
                android:id="@+id/tvCharacterIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="ðŸ¦ž"
                android:textSize="32sp"
                android:gravity="center"
                android:background="@drawable/rounded_widget_bg"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Entity Label -->
                <TextView
                    android:id="@+id/tvEntityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entity 0 (Main)"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!-- Character Type -->
                <TextView
                    android:id="@+id/tvCharacterType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOBSTER"
                    android:textSize="12sp"
                    android:textColor="#888888"/>

                <!-- Public Code (for cross-device messaging) -->
                <TextView
                    android:id="@+id/tvPublicCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:fontFamily="monospace"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- State Badge -->
            <TextView
                android:id="@+id/tvStateBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDLE"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_widget_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"/>

        </LinearLayout>

        <!-- Message Bubble (Semi-transparent) -->
        <LinearLayout
            android:id="@+id/messageBubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/chat_bubble_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello, I'm here!"
                android:textSize="14sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:id="@+id/tvMessageTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last updated: just now"
                android:textSize="10sp"
                android:textColor="#999999"
                android:gravity="end"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Talk Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTalk"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Talk"
                android:textSize="12sp"
                android:textColor="#FF7F50"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconTint="#FF7F50"
                app:iconSize="16dp"
                app:rippleColor="#33FF7F50"/>

            <!-- Remove Button (hidden for entity 0) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Remove"
                android:textSize="12sp"
                android:textColor="#FF5252"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="8dp"
                app:rippleColor="#33FF5252"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
