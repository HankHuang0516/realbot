<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Entity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_label_entity"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/spEntity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/btn_dropdown" />

    <!-- Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_label_message"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:hint="@string/schedule_placeholder_message"
        android:inputType="textMultiLine"
        android:layout_marginBottom="12dp" />

    <!-- Repeat -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_label_repeat"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/spRepeat"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/btn_dropdown" />

    <!-- Cron Expression (hidden by default, shown when "Custom (Cron)" selected) -->
    <LinearLayout
        android:id="@+id/layoutCronInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule_label_cron"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etCronExpr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="30 8 * * *"
            android:inputType="text"
            android:maxLines="1"
            android:fontFamily="monospace"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/schedule_cron_hint"
            android:textSize="11sp"
            android:textColor="#999999" />

    </LinearLayout>

    <!-- Time Section (hidden when cron is selected) -->
    <LinearLayout
        android:id="@+id/layoutTimeSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule_label_time"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvSelectedTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="6dp"
            android:hint="@string/schedule_tap_time" />

        <!-- Quick Time Chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupQuickTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:singleLine="false"
            app:selectionRequired="false"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5min"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_5min" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip15min"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_15min" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip30min"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_30min" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip1hr"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_1hr" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip3hr"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_3hr" />

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

    <!-- Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_label_label"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/schedule_placeholder_label"
        android:inputType="text"
        android:maxLines="1" />

</LinearLayout>
