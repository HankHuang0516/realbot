<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0D0D1A">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/official_borrow_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/borrow_beta_label"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_orange_dark"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

    <!-- Entity Selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_entity_to_bind"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="8dp" />

        <!-- Entity chips populated dynamically by EntityChipHelper -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupEntity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"/>


    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Loading overlay -->
            <LinearLayout
                android:id="@+id/loadingOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="32dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progressLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvLoadingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="14sp"
                    android:textColor="#BBBBBB" />

            </LinearLayout>

            <!-- Free Version Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#333355"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/free_version"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/free_version_model"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/free_version_desc"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/free_version_warning"
                        android:textSize="12sp"
                        android:textColor="#FF9800"
                        android:background="#2D1A00"
                        android:padding="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/free_limit_hint"
                        android:textSize="12sp"
                        android:textColor="#64B5F6"
                        android:background="#0D2137"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBindFree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/use_free_version"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Personal (Monthly) Version Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A2E"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#4A3D8F"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/monthly_version"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/borrow_beta_label"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@android:color/holo_orange_dark"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp" />

                    </LinearLayout>

                    <!-- Pricing: strikethrough original + discount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/tvPriceOriginal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monthly_version_price_original"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvPersonalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monthly_version_price_discount"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#FFD23F" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_version_discount_label"
                        android:textSize="11sp"
                        android:textColor="#FF6B35"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_version_model"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_version_desc"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvAvailability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBindPersonal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/subscribe_and_bind"
                        style="@style/Widget.Material3.Button"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Cost Comparison Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#151528"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#333355"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/borrow_cost_title"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/borrow_cost_eclaw"
                        android:textSize="13sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/borrow_cost_vs"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#BB86FC"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/borrow_cost_server"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/borrow_cost_llm"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/borrow_cost_setup"
                        android:textSize="12sp"
                        android:textColor="#888888" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
