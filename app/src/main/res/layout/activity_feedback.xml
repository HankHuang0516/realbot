<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/feedback"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="32dp">

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_auto_log_hint"
                android:textSize="13sp"
                android:textColor="#99FFFFFF"
                android:layout_marginBottom="20dp"/>

            <!-- Category Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_category_label"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <!-- Category Cards Container -->
            <LinearLayout
                android:id="@+id/layoutCategoryCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Bug Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCatBug"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:strokeColor="#333333"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/iconCatBug"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="ðŸ›"
                            android:textSize="20sp"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:id="@+id/textCatBug"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feedback_cat_bug"
                            android:textSize="13sp"
                            android:textColor="#999999"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Feature Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCatFeature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:strokeColor="#333333"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/iconCatFeature"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="ðŸ’¡"
                            android:textSize="20sp"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:id="@+id/textCatFeature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feedback_cat_feature"
                            android:textSize="13sp"
                            android:textColor="#999999"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Question Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCatQuestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:strokeColor="#333333"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/iconCatQuestion"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="â“"
                            android:textSize="20sp"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:id="@+id/textCatQuestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feedback_cat_question"
                            android:textSize="13sp"
                            android:textColor="#999999"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Message Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/feedback_hint"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#444444"
                app:boxBackgroundColor="#1A1A1A"
                app:hintTextColor="@android:color/white"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="8"
                    android:minLines="4"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Send Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="@string/send"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:backgroundTint="#FFD23F"
                app:cornerRadius="12dp"/>

            <!-- Result Container (hidden initially) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#111A11"
                app:strokeColor="#2E7D32"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/layoutResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Success header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ“"
                            android:textSize="20sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tvResultTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"/>

                    </LinearLayout>

                    <!-- Result details container -->
                    <LinearLayout
                        android:id="@+id/layoutResultDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Feedback Tracker Link (shown after result) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTracker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#1A1A1A"
                app:strokeColor="#333333"
                app:strokeWidth="1dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTrackerTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_track_title"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvTrackerDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_track_desc"
                        android:textSize="12sp"
                        android:textColor="#99FFFFFF"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- GitHub Issue Link (shown if issue created) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGithubIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#1A1A1A"
                app:strokeColor="#333333"
                app:strokeWidth="1dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âŠ™"
                        android:textSize="18sp"
                        android:textColor="#FFD23F"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvGithubIssueTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FFD23F"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/feedback_github_issue_desc"
                            android:textSize="12sp"
                            android:textColor="#99FFFFFF"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â†’"
                        android:textSize="16sp"
                        android:textColor="#666666"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- View All Feedback -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#1A1A1A"
                app:strokeColor="#333333"
                app:strokeWidth="1dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/feedback_view_all"
                        android:textSize="14sp"
                        android:textColor="#FFD23F"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â†’"
                        android:textSize="16sp"
                        android:textColor="#666666"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
