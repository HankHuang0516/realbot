<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Minimal Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <!-- Usage & Subscription Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSubscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_usage_card"
                    android:padding="20dp">

                    <!-- Header Row: Title + Premium Badge -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today's Usage"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>

                        <!-- Premium Badge (hidden by default) -->
                        <LinearLayout
                            android:id="@+id/layoutPremiumBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_subscribe_button"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_premium"
                                android:layout_marginEnd="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PREMIUM"
                                android:textSize="10sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Usage Display Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/tvUsageCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/15"
                            android:textSize="32sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:fontFamily="monospace"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  sends today"
                            android:textSize="14sp"
                            android:textColor="#CCFFFFFF"/>
                    </LinearLayout>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressUsage"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="#FFD23F"
                        android:progressBackgroundTint="#33FFFFFF"
                        android:layout_marginBottom="16dp"/>

                    <!-- Subscribe Button (hidden for premium users) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubscribe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unlock Unlimited"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:background="@drawable/bg_subscribe_button"
                        app:backgroundTint="@null"
                        app:cornerRadius="24dp"
                        android:paddingVertical="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Entity Layout Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entity Layout"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Layout Toggle Buttons -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLayoutSingle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Single"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:checked="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLayoutDual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dual"
                            style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLayoutQuad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quad"
                            style="@style/Widget.Material3.Chip.Filter"/>

                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:id="@+id/tvLayoutDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Single entity displayed at center"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:layout_marginBottom="16dp"/>

                    <!-- Custom Layout Button (inside card) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDebugRender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Custom Layout"
                        app:icon="@drawable/ic_drag"
                        app:iconGravity="textStart"
                        app:cornerRadius="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Entity Manager Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEntityManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Entities"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button.TonalButton"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
