<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_widget_bg"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Title Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chat History"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/widget_open_chat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="Open Chat"
            android:tint="#AAAAAA" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        android:layout_marginBottom="4dp" />

    <!-- Chat Messages ListView -->
    <ListView
        android:id="@+id/widget_message_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/widget_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No messages yet\nTap to start chatting..."
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <!-- Input Section (Clickable to open ChatActivity) -->
    <LinearLayout
        android:id="@+id/widget_input_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/chat_bubble_bg"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_input_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type a message..."
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/widget_send_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Send"
            android:tint="#AAAAAA"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>
