<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0D0D1A">

    <!-- Top Bar (padding applied via WindowInsets) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <ImageButton
            android:id="@+id/btnEditMode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_entities"
            app:tint="@android:color/white"
            android:layout_marginEnd="4dp"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/settings_title"
            app:tint="@android:color/white"/>

    </LinearLayout>

    <!-- AI Usage Status Bar (Phase 9) -->
    <LinearLayout
        android:id="@+id/usageStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="#1A1A2E"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvUsageLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@android:color/white"/>

        <ProgressBar
            android:id="@+id/progressUsage"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="8dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progress_usage"/>

        <TextView
            android:id="@+id/tvUsageStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="10sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Agent Cards Container (Scrollable) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Agent Cards (RecyclerView for drag-to-reorder) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/agentCardsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>

            <!-- Empty State (shown when no agents) -->
            <LinearLayout
                android:id="@+id/emptyStateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_agents_connected"
                    android:textSize="18sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_add_entity"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Add Entity Card (Collapsible) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAddEntity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#333355"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header (clickable to expand/collapse) -->
                    <LinearLayout
                        android:id="@+id/addEntityHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/add_entity"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                        <ImageView
                            android:id="@+id/ivExpandArrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            app:tint="#888888"/>

                    </LinearLayout>

                    <!-- Expandable Content -->
                    <LinearLayout
                        android:id="@+id/addEntityContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp">

                        <!-- Entity Selector -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_entity_slot"
                            android:textSize="12sp"
                            android:textColor="#888888"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupEntity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true"
                            android:layout_marginBottom="16dp">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipEntity0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#0"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:checked="true"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipEntity1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#1"
                                style="@style/Widget.Material3.Chip.Filter"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipEntity2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#2"
                                style="@style/Widget.Material3.Chip.Filter"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipEntity3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#3"
                                style="@style/Widget.Material3.Chip.Filter"/>

                        </com.google.android.material.chip.ChipGroup>

                        <!-- Binding Code Display -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/binding_code"
                            android:textSize="12sp"
                            android:textColor="#888888"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tvBindingCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/code_placeholder"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:letterSpacing="0.3"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvCountdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tap_to_generate_code"
                            android:textSize="12sp"
                            android:textColor="#888888"
                            android:gravity="center"
                            android:layout_marginBottom="16dp"/>

                        <!-- Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnGenerateCode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="@string/generate"
                                style="@style/Widget.Material3.Button.OutlinedButton"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnCopyCommand"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="@string/copy"
                                style="@style/Widget.Material3.Button.TonalButton"/>

                        </LinearLayout>

                        <!-- Loading -->
                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#333355"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp" />

                        <!-- Official Borrow Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnOfficialBorrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/official_borrow"
                            style="@style/Widget.Material3.Button.TonalButton"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Actions (padding applied via WindowInsets) -->
    <LinearLayout
        android:id="@+id/bottomActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:background="#0D0D1A">

        <!-- Entity Count Display -->
        <TextView
            android:id="@+id/tvEntityCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#888888"
            android:textSize="13sp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Mission Control Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mission_control"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button" />

        <!-- Chat Button (white bg, black text) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/chat_history"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button" />

        <!-- Files Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/file_manager_title"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button" />

        <!-- Set Wallpaper Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSetWallpaper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/set_live_wallpaper"
            style="@style/Widget.Material3.Button"/>

    </LinearLayout>

</LinearLayout>
