{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["backend/**"],
    "nixpacksConfigPath": "backend/nixpacks.toml"
  },
  "deploy": {
    "startCommand": "cd backend && node server.js",
    "healthcheckPath": "/api/health",
    "restartPolicyType": "ON_FAILURE"
  }
}
